@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
        }

        .dashboard-header {
            margin: 2rem 0 1rem;
        }

        .card {
            border-radius: 0.75rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }

            .card h5 {
                font-weight: 600;
            }

        .nav-links {
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="dashboard-header">Admin Dashboard</h2>

        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white p-4">
                    <h5>Total Users</h5>
                    <h3>@ViewBag.TotalUsers</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white p-4">
                    <h5>Active Players</h5>
                    <h3>@ViewBag.ActivePlayers</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white p-4">
                    <h5>Games</h5>
                    <h3>@ViewBag.TotalGames</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white p-4">
                    <h5>Online Players</h5>
                    <h3>@ViewBag.OnlinePlayers</h3>
                </div>
            </div>
        </div>

        <div class="row nav-links">
            <div class="col-md-4">
                <a href="/User" class="btn btn-outline-primary w-100">Manage Users</a>
            </div>
            <div class="col-md-4">
                <a href="/Player" class="btn btn-outline-success w-100">Manage Players</a>
            </div>
            <div class="col-md-4">
                <a href="/Game" class="btn btn-outline-warning w-100">Manage Games</a>
            </div>
        </div>
    </div>
</body>
</html>

@{
    ViewData["Title"] = "Admin Control Panel";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Menu -->
        <div class="col-md-3 bg-light border-end" style="min-height: 100vh;">
            <h4 class="mt-4 text-primary">⚙️ Admin Menu</h4>
            <ul class="nav flex-column mt-3">
                <li class="nav-item">
                    <a class="nav-link" asp-action="RoomManager" asp-controller="Admin">🏠 Room Management</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="PlayerManager" asp-controller="Admin">👤 Player Management</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 p-4">
            <h3>Welcome to the Admin Control Panel</h3>
            <p>Choose an option from the left to manage rooms or players.</p>
        </div>
    </div>
</div>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar Menu -->
            <div class="col-md-3 bg-light border-end" style="min-height: 100vh;">
                <h4 class="mt-4 text-primary">⚙️ Admin Menu</h4>
                <ul class="nav flex-column mt-3">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="RoomManager">🏠 Room Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="PlayerManager">👤 Player Management</a>
                    </li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 p-4">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
